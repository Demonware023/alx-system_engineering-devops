#!/usr/bin/env bash

# Function to get record information
get_record_info() {
    local domain=$1
    local subdomain=$2
    local record_info=$(dig $subdomain.$domain | grep -A1 'ANSWER SECTION:')
    local record_type=$(echo $record_info | awk '{print $5}')
    local destination=$(echo $record_info | awk '{print $6}')
    echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Check if domain argument is provided
if [ -z "$1" ]; then
    echo "Please provide a domain."
    exit 1
fi

# Check if subdomain argument is provided
if [ -n "$2" ]; then
    get_record_info $1 $2
else
    for subdomain in www lb-01 web-01 web-02; do
        get_record_info $1 $subdomain
    done
fi
